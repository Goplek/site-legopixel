{
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "compile": "tsc",
    "test": "nyc mocha -r ts-node/register -r jsdom-global/register test/**/*.spec.ts",
    "build": "tsc --module amd --removeComments true --outDir res/js"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "jsdom": "^11.11.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.1",
    "ts-node": "^6.0.5",
    "typescript": "^2.9.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 1,
    "extension":[
      ".ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "include": [
      "**/*.ts"
    ]
  }
}
