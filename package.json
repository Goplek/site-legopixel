{
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "compile": "tsc",
    "test": "nyc mocha -r ts-node/register -r jsdom-global/register test/**/*.spec.ts",
    "build": "tsc --module amd --removeComments true --outDir res/js"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "jsdom": "^11.12.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 1,
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "include": [
      "**/*.ts"
    ]
  }
}
